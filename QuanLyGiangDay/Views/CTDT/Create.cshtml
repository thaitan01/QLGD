@model QuanLyGiangDay.Models.EF.CTDT

@{
    ViewBag.Title = "Create";
    Layout = null;
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="width:1200px">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group c-form-group">
            Mã Chương Trình Dạo Tạo 
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="MaCTDT" name="MaCTDT" type="text"
                      value="@ViewBag.id" style="pointer-events:none;opacity:0.5">
                @Html.ValidationMessageFor(model => model.MaCTDT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group c-form-group">
            Tên Chương Trình Dạo Tạo
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenCTDT, new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlength =50 } })
                @Html.ValidationMessageFor(model => model.TenCTDT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group c-form-group" style="display: flex; justify-content: right; margin-left: 6px; margin-right: -4px;">
            Mô Tả
            <div class="col-md-10" style=" margin-right: 9px;">
                @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </div>
}
