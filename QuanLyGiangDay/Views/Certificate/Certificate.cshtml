
@{
    ViewBag.Title = "Certificate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section AddToHead{
    <link href="@Url.Content("~/Content/_share/css/HocKy/HocKy.css")" rel="stylesheet" type="text/css" />
}

<div class="panel-group">
    <div class="panel panel-primary">
        <div class="panel-heading"><h4><i class="fa fa-angle-right"></i> Quản lý chứng chỉ</h4></div>
        <div class="panel-body">
            <div class="float-left" style="margin-left: 30px; z-index: 99; position: relative; ">
                <div>
                    <br />
                    <h5>Giáo viên: @ViewBag.TenGiaoVien</h5>
                </div>
            </div>
            <div class="float-left" style="margin-left: 30px; margin-right:50px; z-index: 99; position: relative; ">
                <div>
                    <br />
                    <h5>Số chứng chỉ hiện có: @ViewBag.SoChungChi</h5>
                </div>
            </div>
            <div class="float-right" style="padding-bottom: 10px; padding-right: 28px; z-index: 99; position: relative;">
                <div>

                    <a class="btn btn-primary" data-modal="" href="/Certificate/_PartialCreate"
                       id="btnCreate">
                        <span class="fa fa-plus-circle"></span>
                        &nbsp;&nbsp;Thêm chứng chỉ
                    </a>
                    <button type="button" class="btn btn-danger" style="margin: 0px !important" onclick="backToPrevious()">
                        <span class="fa fa-backward"></span>&nbsp;&nbsp;Quay lại
                    </button>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>

                                    <th>
                                        Tên chứng chỉ
                                    </th>
                                    <th>
                                        Trạng thái
                                    </th>
                                    <th class="no-sorting">
                                        Cập nhật
                                    </th>
                                    <th class="no-sorting">
                                        Xóa
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.ChungChi)
                                {
                                    <tr class="c-tr-body">
                                        <td>
                                            @item.MonHoc.TenMon
                                        </td>
                                        <td>
                                             @item.MoTa
                                        </td>
                                        <td>
                                            <a data-modal='' href='@Url.Action("_PartialEdit", "Certificate", new { MaGV=item.MaGV, MaMH = item.MaMH}) ' title='Cập nhật'> <span class='fa fa-edit'> </span>  </a>

                                        </td>
                                        <td>
                                            <a style='color: #e74a3b;' data-modal='' href='@Url.Action("_PartialDelete", "Certificate", new { MaGV=item.MaGV, MaMH = item.MaMH})' title='Xóa'> <span class='fa fa-trash'> </span> </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/scripts/myScript.js")
    <script type="text/javascript">
        function backToPrevious() {
            window.history.back();
        }
    </script>
}


<script src="~/Content/_custom/datatables.js"></script>




