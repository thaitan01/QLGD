@model QuanLyGiangDay.Models.EF.HocKy

@{
    ViewBag.Title = "Edit";
    Layout = null;
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal" style="width:500px">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaHK)

    <div class="form-group c-form-group">
        Mã Học Kỳ 
        <div class="col-md-10" style="pointer-events:none; opacity:0.5">
            @Html.EditorFor(model => model.TenHK, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenHK, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group c-form-group">
        Tên Học Kỳ
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenHK, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenHK, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </div>
</div>
}
