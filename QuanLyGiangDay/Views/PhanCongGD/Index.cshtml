
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel-group">
    <div class="panel panel-primary">
        <div class="panel-heading"><h4><i class="fa fa-angle-right"></i> Phân Công Giảng Dạy</h4></div>
        <div class="panel-body">
            <div class="float-left" style="margin-left: 30px; z-index: 99; position: relative; ">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Lớp..." aria-label="Search" aria-describedby="basic-addon2">
                    <input type="text" class="form-control" placeholder="Môn học..." aria-label="Search" aria-describedby="basic-addon2">
                    <input type="text" class="form-control" placeholder="Giờ học..." aria-label="Search" aria-describedby="basic-addon2">
                    <input type="text" id="dateTuNgay" class="form-control" placeholder="Từ Ngày..." aria-label="Search" aria-describedby="basic-addon2">
                    <input type="text" id="dateDenNgay" class="form-control" placeholder="Đến Ngày..." aria-label="Search" aria-describedby="basic-addon2">
                    <label for="" class="form-control">Ngoài giờ
                        <input type="checkbox" aria-label="Search" aria-describedby="basic-addon2" style="margin-left: 4px;margin-top: 5px;">
                    </label>
                    <div class="input-group-append" style="margin: 0px">
                        <button class="btn-primary" type="button" style="width: 41px">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="float-right" style="padding-bottom: 10px; padding-right: 28px; z-index: 99; position: relative;">
                <div>
                    <button type="button" class="btn btn-primary" onclick="getPhanCongGD()">Phân công</button>&nbsp;
                </div>
            </div>
            <div class="col-md-12">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="danhSachGridView" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Mã lớp</th>
                                    <th>Môn học</th>
                                    <th>Giờ học</th>
                                    <th>Mô tả</th>
                                    <th>Ngày dạy dự kiến</th>
                                    <th>Ngày bắt đầu thực tế</th>
                                    <th>Là ngoài giờ</th>
                                    <th>Giáo viên</th>
                                    <th>Cập nhật</th>
                                    <th>Xóa</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" role="dialog" id="phanCongGDModal" aria-labelledby="phanCongGDModalLebel" aria-hidden="true">
    <div class="modal-dialog" style="overflow-y: initial !important" role="document">
        <div class="modal-content" id="phanCongGDModalBody">

        </div>
    </div>
</div>
<div class="modal fade" role="dialog" id="messageModal" aria-labelledby="messageLebel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="messageBody">
            <div class="modal-header" style="background-color: #636273">
                <h4 class="modal-title">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </h4>
            </div>
            <div class="modal-body">
                <span id="lblMessage"></span>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        var dataTable;
        $(document).ready(function () {
            $("#dateTuNgay").datepicker();
            $("#dateDenNgay").datepicker();
            $('.datepicker').datepicker({
                format: 'dd/mm/yyyy'
            });
            PhanCongGDDatatable();
        });

        function PhanCongGDDatatable() {
            dataTable = $("#danhSachGridView").DataTable({
                "processing": true,
                "serverSide": true,
                "filter": true,
                "orderMulti": false,
                "searching": false,
                "destroy": true,
                "ordering": true,
                "responsive": true,
                "ajax": {
                    "url": '/PhanCongGD/GetPhanCongGDTableData',
                    "type": "POST",
                    "datatype": "json"
                },
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.12.1/i18n/vi.json'
                },
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'excelHtml5',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'pdfHtml5',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'colvis',
                        text: 'Ẩn/Hiện Cột'
                    },
                ],
                "columns": [
                    { "data": "MaLHMH", "name": "MaLHMH", "autoWidth": true, visible: false },
                    { "data": "MaLop", "name": "MaLop", "autoWidth": true },
                    { "data": "MaMH", "name": "MaMH", "autoWidth": true },
                    { "data": "MaGio", "name": "MaGio", "autoWidth": true },
                    { "data": "MoTa", "name": "MoTa", "autoWidth": true },
                    { "data": "NgayDayDuKien", "name": "NgayDayDuKien", "autoWidth": true },
                    { "data": "NgayBD", "name": "NgayBD", "autoWidth": true },
                    {
                        "data": "NgoaiGio", "name": "NgoaiGio", "autoWidth": true,
                        "render": function (data, type, full, row) {
                            var isNgoaiGio = full.NgoaiGio.trim();
                            if (isNgoaiGio == "T")
                                return "<span class='fa fa-check' style='color: #4b70dd;'></a>";
                            else
                                return "<span style='color: #e74a3b;font-size: 23px;font-weight: bold;'>x</a>";
                            
                        },
                    },
                    { "data": "MaGV", "name": "MaGV", "autoWidth": true,
                        },
                    {
                        "render": function (data, type, full, row) {
                            var id = full.MaLHMH.trim();
                            return "<a href='#' class='btn-xs btn-xs-primary' onclick=getPhanCongGD('" + id + "'); ><span class='fa fa-edit'></a>";
                        },
                        "orderable": false
                    },
                    {
                        "render": function (data, type, full, row) {
                            var id = full.MaLHMH.trim();
                            return "<a href='#' class='btn-xs btn-xs-danger' style='color: #e74a3b;' onclick=deletePhanCongGD('" + id + "'); ><span class='fa fa-trash'></a>";
                        },
                        "orderable": false
                    }
                ]
            });
        }

        function getPhanCongGD(id) {
            $.get("/PhanCongGD/GetPhanCongGDPartial", { id: id }, function (res) {
                $("#phanCongGDModalBody").html(res);
                $("#phanCongGDModal").modal("show");
            });
        }

    </script>
}


