@model QuanLyGiangDay.Models.EF.GiaoVien

@{
    ViewBag.Title = "Create";
    Layout = null;
}
    <div id="tabs-1">
        <div class="body-tab">
            <form action="/QuanLyGiaoVien/Create" id="body_add_1_table" method="post">
                <div class="create-gv c-box-show" style="padding-top:20px">
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <div class="form-group c-form-group">
                            <label class="control-label col-md-2" for="MaGV">Mã Giáo Viên</label>
                            <div class="col-md-10">
                                <input class="form-control c-form-control text-box single-line" id="MaGV" name="MaGV"
                                       type="text" value="@ViewBag.id" style="pointer-events:none;opacity:0.5" required placeholder="Mã số giáo viên VD: GV01...">
                                <span class="field-validation-valid text-danger" data-valmsg-for="MaGV"
                                      data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <div class="form-group c-form-group ">
                            <label class="control-label col-md-2" for="TenGV">Tên Giáo Viên</label>
                            <div class="col-md-10">
                                <input class="form-control c-form-control text-box single-line" id="TenGV" name="TenGV"
                                       type="text" value="" placeholder="Tên Giáo Viên VD: Trần Văn A..." required
                                       maxlength="100"
                                       >
                                <span class="field-validation-valid text-danger" data-valmsg-for="TenGV"
                                      data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <div class="form-group c-form-group ">
                            <label class="control-label col-md-2" for="MaLoaiGV">Loại Giáo Viên</label>
                            <div class="col-md-10" id="icon-typr-gv">
                                @Html.DropDownList("MaLoaiGV", null,
                                   htmlAttributes: new
                                        {
                                       @class = "form-control form-control c-form-control",
                                       @id = "MaLoaiGV"
                                   })
                                <span class="field-validation-valid text-danger" data-valmsg-for="MaLoaiGV"
                                      data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <div class="form-group c-form-group ">
                            <label class="control-label col-md-2" for="Email">Email</label>
                            <div class="col-md-10">
                                <input class="form-control c-form-control text-box single-line" id="Email" name="Email"
                                       type="email" value="" placeholder="Đại chỉ email VD: Tranvana@gmail.com" required
                                       maxlength="50">
                                <span class="field-validation-valid text-danger" data-valmsg-for="Email"
                                      data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <div class="form-group c-form-group ">
                            <label class="control-label col-md-2" for="Sdt">Số Điện Thoại</label>
                            <div class="col-md-10">
                                <input class="form-control c-form-control text-box single-line" id="Sdt" name="Sdt"
                                       type="number" value="" placeholder="Số điện thoại VD: 079686459" required
                                       maxlength="12">
                                <span class="field-validation-valid text-danger" data-valmsg-for="Sdt"
                                      data-valmsg-replace="true"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="margin-top:20px">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
<script src="~/Content/_share/js/QuanLyGiaoVien/Create.js"></script>