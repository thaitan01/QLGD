@model IEnumerable<QuanLyGiangDay.Models.EF.GiaoVien>

@{
    ViewBag.Title = "Quản Lý Giáo Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="display-qlgv">
    <div class="herder-display">
        <p class="tile-dispaly">
            <i class="fa fa-angle-right"></i>
            Quản Lý Giáo Viên
        </p>
    </div>
    <div class="button-index-qlgiv shadow">
        <div id="btn-call-add-gv" class="btn btn-primary btn-primary-add">
            <img class="icon-primary-add" src="~/Assets/icon/_add.png" alt="" /> Thêm Giáo Viên
        </div>
        <div class="btn btn-primary import">
            Import Excel
        </div>
    </div>
    <div class="body-display-index-qlgiv shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-body-display-index-qlgiv" id="dataTable"
                       width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Tên Giáo Viên
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Số Điện Thoại
                            </th>
                            <th>
                                Loại Giáo Viên
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="c-tr-body" data-id="@item.MaGV.Trim()">
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenGV)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                    <?= item.MaGV ?>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sdt)
                                </td>
                                <td class="body-action-item-table">
                                    @item.MaGV.Trim() ||
                                    @Html.DisplayFor(modelItem => item.LoaiGV.TenLoaiGV)
                                    <label id="@item.MaGV.Trim()" class="action-item-table" style="display: none;">
                                        <p data-id="@item.MaGV.Trim()"
                                           class="c-btn-item btn-success btn-circle button-update-gv">
                                            <i class="fa fa-edit"></i>
                                        </p>
                                        <p data-id="@item.MaGV.Trim()"
                                           class="c-btn-item btn-info btn-circle button-detail-gv">
                                            <i class="fas fa-info-circle"></i>
                                        </p>
                                        <p data-id="@item.MaGV.Trim()"
                                           class="c-btn-item btn-danger btn-circle button-delete-gv">
                                            <i class="fas fa-trash"></i>
                                        </p>
                                        @item.MaGV.Trim()
                                        @* @Html.ActionLink("Edit", "Edit", new { id = item.MaGV }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.MaGV }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.MaGV }) *@
                                    </label>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
         aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Thêm Mới Giáo Viên</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="body-modal" id="body-modal-qlgv">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="button" id="save-t" class="btn btn-primary">Lưu</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/_share/js/QuanLyGiaoVien/Index.js"></script>