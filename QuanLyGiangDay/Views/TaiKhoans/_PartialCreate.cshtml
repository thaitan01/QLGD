@model QuanLyGiangDay.Models.EF.TaiKhoan

@* model header *@
<div class="modal-header">
    <h5 class="modal-title">Thêm tài khoản</h5>
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        ×
    </button>

    
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.MaTK, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaTK, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    Tên đăng nhập
                    @Html.EditorFor(model => model.TenDN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
              
                <div class="col-md-10">
                    Mật khẩu
                    @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
               
                <div class="col-md-10">
                    Mã giáo viên
                    @Html.DropDownList("MaGV", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaGV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
               
                <div class="col-md-10">
                    Vai trò
                    @Html.DropDownList("MaVT", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaVT, "", new { @class = "text-danger" })
                </div>
            </div>

            

        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-default btn-secondary" data-dismiss="modal">Đóng</button>
        <input type="submit" value="Thêm" class="btn btn-default btn-primary" />

    </div>

}

